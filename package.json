{
  "name": "pushin-mongo-movies",
  "version": "1.0.0",
  "description": "A personal movie database using MongoDB, Next.js, React, TypeScript, Nuqs, Tailwind CSS, Vercel, & more!",
  "license": "MIT",
  "homepage": "https://pushin-mongo-movies.vercel.app",
  "author": "Ethan G. (https://egxo.dev)",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "pnpm run lint",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "next lint --fix",
    "format": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format:fix": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "mongodb": "^6.16.0",
    "next": "15.5.7",
    "next-themes": "^0.4.6",
    "nuqs": "^2.4.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "eslint": "^9.25.1",
    "eslint-config-next": "15.5.7",
    "eslint-config-prettier": "^10.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.5",
    "tw-animate-css": "^1.2.8",
    "typescript": "5.7.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "proseWrap": "always",
    "printWidth": 80,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./app/globals.css"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ]
  }
}
